<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="2.5.6">
	<name>Articles ReOrder</name>
	<author>Merianos Nikos</author>
	<creationDate>September 2012</creationDate>
	<copyright>Copyright (C) 2012 xtnd.it, All rights reserved.</copyright>
	<license>GNU General Public License</license>
	<authorEmail>info@xtnd.it</authorEmail>
	<authorUrl>www.stigmahost.com</authorUrl>
	<version>1.0.0</version>
	<description>This module is a re-write of the famous X Articles Ordering module, primiry developed by George Chouliaras. This latest module is compatible with Joomla 2.5.x.</description>
	<files>
		<filename module="mod_articlesreorder">mod_articlesreorder.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>js</folder>
        <folder>css</folder>
        <filename>language/bg-BG/bg-BG.mod_articlesreorder.ini</filename>
        <filename>language/cs-CZ/cs-CZ.mod_articlesreorder.ini</filename>
        <filename>language/da-DK/da-DK.mod_articlesreorder.ini</filename>
        <filename>language/el-GR/el-GR.mod_articlesreorder.ini</filename>
        <filename>language/en-GB/en-GB.mod_articlesreorder.ini</filename>
        <filename>language/zh-CN/zh-CN.mod_articlesreorder.ini</filename>
        <filename>language/fr-FR/fr-FR.mod_articlesreorder.ini</filename>
        <filename>language/it-IT/it-IT.mod_articlesreorder.ini</filename>
	</files>
    <config>
    	<fields name="params">
    		<fieldset name="basic">
                <field name="ord_mostrecent" type="radio" default="0" label="MOD_ARTICLESREORDER_RECENT_POST" description="">
                    <option value="0">MOD_ARTICLESREORDER_NO</option>
                    <option value="1">MOD_ARTICLESREORDER_YES</option>
                </field>
                <field name="ord_title" type="radio" default="0" label="MOD_ARTICLESREORDER_TITLE" description="">
                    <option value="0">MOD_ARTICLESREORDER_NO</option>
                    <option value="1">MOD_ARTICLESREORDER_YES</option>
                </field>
                <field name="ord_author" type="radio" default="0" label="MOD_ARTICLESREORDER_AUTHOR" description="">
                    <option value="0">MOD_ARTICLESREORDER_NO</option>
                    <option value="1">MOD_ARTICLESREORDER_YES</option>
                </field>
                <field name="ord_hits" type="radio" default="0" label="MOD_ARTICLESREORDER_HITS" description="">
                    <option value="0">MOD_ARTICLESREORDER_NO</option>
                    <option value="1">MOD_ARTICLESREORDER_YES</option>
                </field>
                <field name="@spacer" type="spacer" default="" label="" description="" />
                <field name="moduleclass_sfx" type="text" default="" label="MOD_ARTICLESREORDER_SUFFIX" description="MOD_ARTICLESREORDER_SUFFIX_DESC" />
                <field name="@spacer" type="spacer" default="" label="" description="" />
    		</fieldset>
            <fieldset name="advanced">
                <field name="cache" type="list" default="1" label="MOD_ARTICLESREORDER_CACHE" description="MOD_ARTICLESREORDER_CACHE_DESC">
                    <option value="1">MOD_ARTICLESREORDER_GLOBAL</option>
                    <option value="0">MOD_ARTICLESREORDER_NO_CACHE</option>
                </field>
                <field name="cache_time" type="text" default="900" label="MOD_ARTICLESREORDER_CACHE_TIME" description="MOD_ARTICLESREORDER_CACHE_TIME_DESC" />
            </fieldset>
    	</fields>
	</config>
    <languages folder="language">
        <language tag="bg-BG">bg-BG/bg-BG.mod_articlesreorder.ini</language>
        <language tag="cs-CZ">cs-CZ/cs-CZ.mod_articlesreorder.ini</language>
        <language tag="da-DK">da-DK/da-DK.mod_articlesreorder.ini</language>
        <language tag="el-GR">el-GR/el-GR.mod_articlesreorder.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_articlesreorder.ini</language>
        <language tag="zh-CN">zh-CN/zh-CN.mod_articlesreorder.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.mod_articlesreorder.ini</language>
        <language tag="it-IT">it-IT/it-IT.mod_articlesreorder.ini</language>
    </languages>
    <administration>
        <languages folder="language">
            <language tag="bg-BG">bg-BG/bg-BG.mod_articlesreorder.ini</language>
            <language tag="cs-CZ">cs-CZ/cs-CZ.mod_articlesreorder.ini</language>
            <language tag="da-DK">da-DK/da-DK.mod_articlesreorder.ini</language>
            <language tag="el-GR">el-GR/el-GR.mod_articlesreorder.ini</language>
            <language tag="en-GB">en-GB/en-GB.mod_articlesreorder.ini</language>
            <language tag="zh-CN">zh-CN/zh-CN.mod_articlesreorder.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.mod_articlesreorder.ini</language>
            <language tag="it-IT">it-IT/it-IT.mod_articlesreorder.ini</language>
        </languages>
    </administration>
</install>
